{
	"name": "Head Circumference Chart",

	"namespace": "Vanderbilt\\HeadCircChart",

	"description": "Inserts a chart for typical head circumference/weight/height into REDCap form and marks the current record's location on the chart based on age/head circumference/height/weight using WHO reference data and Fenton data for premature babies. CDC Data is available in the code, but isn't currently being used by the module.",

    "authors": [
        {
            "name": "Kyle McGuffin",
            "email": "datacore@vumc.org",
			"institution": "Vanderbilt University Medical Center"
        }
    ],
	
	"permissions": [
	  "redcap_data_entry_form",
	  "redcap_save_record"
	],

